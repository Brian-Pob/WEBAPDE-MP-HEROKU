<div class="modal fade" id="<%= i %>modal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <div class="card">
                            <div class="card-header">
                                <h2 align =center><strong><%= data.list[i].title %></strong></h2>
                                <p align =center>
                                <% for(var j = 0; j < data.list[i].tags.length; j++) {%>
                                <span class="badge badge-primary"><%= data.list[i].tags[j] %></span><% } %></p>
                                <p style="text-align:left; margin: 0;padding: 0;"><strong><a href="">by <%= data.list[i].user %> </a></strong>
                                    <span style="float:right;"><small style="color:grey;">posted <%= data.list[i].datePosted %></small></span>
                                </p>
                            </div>
                            <div class="card-body">
                                <div class="pb-2 mt-4 mb-2 ">
                                    <a data-toggle="modal" data-target="#<%= i %>modal">
                                         <img src='./imgs/upload/<%= data.list[i].image %>'/>
                                    </a>
                                </div>
                            </div>
                                         
                         <div class="card-footer">
                            <button class="btn btn-outline-success fa-2x fas fa-arrow-up"></button>
                            <button class="btn btn-outline-danger fa-2x fas fa-arrow-down"></button>
                            <button class="btn btn-outline-primary  fa-2x fab fa-facebook-f"></button>
                            <button class="btn btn-outline-info fa-2x fab fa-twitter "></button>
                            <button class="btn btn-outline-secondary  fa-2x fas fa-comment-alt"></button>
            <!--================================== COMMENT SECTION =================================-->
                    <br>
                    <div class="container">
                        <form class="form-commenting" action="/addComment" method="post" enctype="multipart/form-data">
                            <table style="width:115%">
                                <td width="70%">
                                    <input type="text" id="comment" name="comment" class="form-control" placeholder="Comment Something! ">
                                </td>
                                <td width="30%">
                                    <button type="submit" class="btn btn-default">Send</button>
                                </td>
                            </table>
                            <input type="hidden" id="postID" name="uniquepostID" <%= data.list[i].image %>>
                        </form>
                        <h4>Comment Section</h4>
                        <div class="media p-1">
                            <div class="media-body">
                                
                                <h5>John Doe <small><i>Posted on February 19, 2016</i></small></h5>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                <span><a class="" role="button" data-toggle="collapse" href="#replyCommentT" aria-expanded="false" aria-controls="collapseExample">reply</a></span>
                                <div class="collapse" id="replyCommentT">
                                    <form>
                                        <div class="form-group">
                                            <label for="comment">Your Comment</label>
                                            <textarea name="comment" class="form-control" rows="3"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-default">Send</button>
                                    </form>
                                </div>
                                <div class="media p-3">
                                    <div class="media-body">
                                        <h5>Jane Doe <small><i>Posted on February 20 2016</i></small></h5>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                        <span><a class="" role="button" data-toggle="collapse" href="#replyCommentT" aria-expanded="false" aria-controls="collapseExample">reply</a></span>
                                        <div class="collapse" id="replyCommentT">
                                            <form>
                                                <div class="form-group">
                                                    <label for="comment">Your Comment</label>
                                                    <textarea name="comment" class="form-control" rows="3"></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-default">Send</button>
                                            </form> 
                                        </div>
                                    </div>
                                </div>  
                            </div>
                        </div>
                    </div>   
            <!--- ============================  END OF COMMENT SECTION========================= ---->
                        </div>
                        
                    </div>
                     
                </div>
            </div>
        </div>
    </div>